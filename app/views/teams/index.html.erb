<div class="row">
	<!-- SIDEBAR NAVIGATION -->
	<div class="col-sm-2">
		<%= render 'navigation/teams_sidebar_nav' %>
	</div>

	<div ng-controller="TeamIndexController">

		<div class="col-sm-8">
			<team ng-repeat="team in teams"></team>
		</div>

		<div class="col-sm-2">
			<%= render 'navigation/users_sidebar_nav' %>
		</div>
	</div>
</div>

<script type="text/javascript" charset="utf-8">
jQuery(function() {
	jQuery('.sidebar li').each(function() {
		var href = jQuery(this).find('a').attr('href');
		if (href === window.location.pathname) {
			jQuery(this).addClass('current');
		}
	});
});  

</script>