<div class="row">

	<!-- SIDEBAR NAVIGATION -->
	<div class="col-sm-2">
		<%=render 'navigation/projects_sidebar_nav' %>
	</div>

	<div class="col-sm-10">

		<div ng-controller="ProjectIndexController">
			<h2>Unassigned</h2>
			<unassigned ng-repeat="project in projects | filter:{status:'unassigned'}" ng-model="project">
			</unassigned>
			<h2>Assigned</h2>
			<assigned ng-repeat="project in projects | filter:{status:'assigned'}:true" ng-model="project">
			</assigned>
			<h2>Archived</h2>
		</div>
	</div>
</div>