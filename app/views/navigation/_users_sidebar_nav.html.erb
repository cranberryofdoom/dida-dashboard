<div class="sidebar">
	<h2 class="heading">
		Designers
		<button class="edit-button" ng-click="editDesigners()" ><span class="glyphicon glyphicon-edit"></span></button>
	</h2>

	<ul ng-show="edit" ng-model="designers" class="sidenav nav">
		<li ng-model="designers" data-drag="true" data-jqyoui-options="{revert: 'invalid', helper: 'clone'}" jqyoui-draggable="{index: {{$index}}, animate: true, placeholder: 'keep', onStart:'startCallback(designer, $index)'}" ng-repeat="designer in designers">
			<a>{{designer.first_name}} {{designer.last_name}}</a>
		</li>
		<li><a class="option" data-toggle="modal" data-target="#create-user">Create New Designer</a></li>
	</ul>

	<ul ng-hide="edit" ng-model="designers" class="row designer-list-expanded" id="designers">
		<li class="col-sm-4" ng-model="designers" ng-repeat="designer in designers">
			<div class="designer">
				<h2>{{designer.first_name}} {{designer.last_name}}</h2>
				<p>{{designer.email}}</p>
				<p>{{designer.projects[0].name}}</p>
				<button>Edit This Designer</button>
				<button class="remove-button" ng-click="deleteDesigner($index, designer, designers)"><span class="glyphicon glyphicon-remove"></span></button>
			</div>
		</li>
	</ul>
</div>

<div class="modal fade" id="create-user" tabindex="-1" role="dialog" aria-hidden="true" aria-labelledby="create-user-label">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title" id="create-user-label">Create A User</h4>
			</div>
			<%= simple_form_for :user, :url => url_for(:action => 'create_user', :controller => 'teams'),
			:method => 'post' do |f| %>
			<div class="modal-body">
				<%= f.input :first_name, :required => true %>
				<%= f.input :last_name, :required => true %>
				<%= f.collection_select :privilege, User::ROLES, :to_s, :humanize, :required => true %>
				<%= f.input :email, :required => true, :autofocus => true %>
				<%= f.input :area, :required => true, :autofocus => true %>
				<%= f.input :password, :required => true %>
				<%= f.input :password_confirmation, :required => true %>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<%= f.submit "Submit", :class => "btn" %>
			</div>
			<% end %>
		</div>
	</div>
</div>